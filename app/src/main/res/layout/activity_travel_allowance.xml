<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cioc.libreerp.TravelAllowanceActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:cardBackgroundColor="@color/white"
        android:padding="20dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="2dp"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
        <TextView
            android:id="@+id/route_date_tv"
            style="@style/textview_style"
            android:layout_width="match_parent"
            android:text="25-06-2018"
            android:textAlignment="center"
            android:textStyle="bold" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ScrollView
        android:id="@+id/allowance_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">


        <LinearLayout
            android:id="@+id/travel_allowance_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           >
            <LinearLayout
                android:id="@+id/llKM"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginVertical="@dimen/activity_vertical_margin_spacing">

                <ImageView
                    android:id="@+id/tkm_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="center"
                    app:srcCompat="@drawable/ic_total_km" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="274dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/total_km_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Total KM"
                        android:inputType="numberDecimal"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:backgroundTint="@android:color/transparent"/>

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:orientation="horizontal"
                android:layout_marginVertical="@dimen/activity_vertical_margin_spacing">

                <!--<ImageView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_weight="1"-->
                    <!--android:scaleType="center"-->
                    <!--app:srcCompat="@drawable/date_icon" />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Mode of transport"
                        android:textColor="@color/colorAccent"
                        android:textAlignment="center"/>

                    <Spinner
                        android:id="@+id/transport_spinner"
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:spinnerMode="dropdown" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llTA"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="@dimen/activity_vertical_margin_spacing"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ta_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="center"
                    app:srcCompat="@drawable/money_icon" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="274dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/ta_allowance_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="TA allowance"
                        android:inputType="number"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:backgroundTint="@android:color/transparent"/>

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llOtp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginVertical="@dimen/activity_vertical_margin_spacing">

                <ImageView
                    android:id="@+id/lodgingiv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="center"
                    app:srcCompat="@drawable/money_icon" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="180dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/lodging_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="Lodging Cost"
                        android:inputType="numberDecimal"
                        android:maxLines="1"
                        android:singleLine="true" />

                </android.support.design.widget.TextInputLayout>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="With bills"
                    android:id="@+id/lodging_bills"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llFood"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginVertical="@dimen/activity_vertical_margin_spacing">

                <ImageView
                    android:id="@+id/foodiv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="center"
                    app:srcCompat="@drawable/money_icon" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="180dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/foodCostEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="Food Cost"
                        android:inputType="numberDecimal"
                        android:maxLines="1"
                        android:singleLine="true" />

                </android.support.design.widget.TextInputLayout>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="With bills"
                    android:id="@+id/food_bills"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="42dp"-->
                <!--android:orientation="horizontal"-->
                <!--android:layout_marginVertical="@dimen/activity_vertical_margin_spacing">-->

                <!--&lt;!&ndash;<ImageView&ndash;&gt;-->
                <!--&lt;!&ndash;android:layout_width="wrap_content"&ndash;&gt;-->
                <!--&lt;!&ndash;android:layout_height="match_parent"&ndash;&gt;-->
                <!--&lt;!&ndash;android:layout_weight="1"&ndash;&gt;-->
                <!--&lt;!&ndash;android:scaleType="center"&ndash;&gt;-->
                <!--&lt;!&ndash;app:srcCompat="@drawable/date_icon" />&ndash;&gt;-->

                <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:orientation="horizontal">-->

                    <!--<TextView-->
                        <!--android:layout_width="0dp"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:layout_weight="1"-->
                        <!--android:gravity="center_vertical"-->
                        <!--android:text="Status"-->
                        <!--android:textColor="@color/colorAccent"-->
                        <!--android:textAlignment="center"/>-->

                    <!--<Spinner-->
                        <!--android:id="@+id/status_spinner"-->
                        <!--android:layout_width="160dp"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:spinnerMode="dropdown" />-->
                <!--</LinearLayout>-->


            <!--</LinearLayout>-->

            <Button
                android:id="@+id/save_button"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/roundbutton"
                android:text="@string/action_save"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"/>

            <Button
                android:id="@+id/submit_button"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/round_button_green"
                android:text="@string/action_submit"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llFilledForm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
           >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="@dimen/activity_vertical_margin_spacing">

                <TextView
                    style="@style/textview_style"
                    android:text="Total KM"
                    android:layout_marginRight="5dp"
                    android:textStyle="bold"/>

                <TextView
                    style="@style/textview_style"
                    android:text="0"
                    android:id="@+id/total_km_tv"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="@dimen/activity_vertical_margin_spacing">

                <TextView
                    style="@style/textview_style"
                    android:text="Mode of transport"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"/>

                <TextView
                    style="@style/textview_style"
                    android:id="@+id/transport_tv"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="@dimen/activity_vertical_margin_spacing">

                <TextView
                    style="@style/textview_style"
                    android:text="TA allowance"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"/>

                <TextView
                    style="@style/textview_style"
                    android:text="0"
                    android:id="@+id/travel_allowance_tv"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="@dimen/activity_vertical_margin_spacing">

                <TextView
                    style="@style/textview_style"
                    android:text="Lodging Cost"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"/>

                <TextView
                    style="@style/textview_style"
                    android:text="0"
                    android:id="@+id/lodging_tv"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="@dimen/activity_vertical_margin_spacing">

                <TextView
                    style="@style/textview_style"
                    android:text="Food Cost"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"/>

                <TextView
                    style="@style/textview_style"
                    android:text="0"
                    android:id="@+id/food_tv"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="@dimen/activity_vertical_margin_spacing">

                <TextView
                    style="@style/textview_style"
                    android:text="Status"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"/>

                <TextView
                    style="@style/textview_style"
                    android:id="@+id/status_tv"/>

            </LinearLayout>
        </LinearLayout>

        </LinearLayout>

    </ScrollView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
